{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "./src/@types/index.d",
    "./node_modules/@types"
  ],
  "paths": {
    "*": [
      "./node_modules/*",
      "./src/@types/*"
    ]
  },
}